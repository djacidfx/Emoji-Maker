<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center_horizontal">

        <com.demo.example.emoji.ultis.TextDialog
            android:id="@+id/tvNoDialog"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/p20dp"
            android:layout_marginRight="@dimen/p20dp"
            android:layout_marginBottom="80dp"
            android:background="@drawable/no_button_dialog"
            android:gravity="center"
            android:lines="1"
            android:paddingTop="@dimen/p15dp"
            android:paddingBottom="@dimen/p15dp"
            android:text="@string/no_thanks"
            android:textColor="@color/colorfff"
            android:textSize="@dimen/text_sz_16sp" />

        <com.demo.example.emoji.ultis.TextDialog
            android:id="@+id/tvYesDialog"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="80dp"
            android:background="@drawable/yes_button_dialog"
            android:gravity="center"
            android:paddingTop="@dimen/p15dp"
            android:paddingBottom="@dimen/p15dp"
            android:text="Sure!"
            android:textColor="#00c7a8"
            android:textSize="@dimen/text_sz_16sp" />
    </LinearLayout>
</RelativeLayout>
