<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_item_album"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/im_show"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop" />

        <ImageView
            android:id="@+id/im_choose"
            android:layout_width="@dimen/p20dp"
            android:layout_height="@dimen/p20dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/p5dp"
            android:layout_marginRight="@dimen/p5dp"
            android:padding="@dimen/p3dp"
            android:src="@drawable/icon_delete_red" />
    </RelativeLayout>
</LinearLayout>
