<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/p74dp"
    android:layout_height="@dimen/p74dp"
    android:orientation="vertical"
    android:padding="@dimen/p3dp">

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/im_item_wallpaper"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        app:riv_oval="false" />

    <ImageView
        android:id="@+id/im_item_choose"
        android:layout_width="@dimen/p40dp"
        android:layout_height="@dimen/p40dp"
        android:layout_centerInParent="true"
        android:padding="10dp"
        android:src="@drawable/icon_selected"
        android:visibility="gone" />
</RelativeLayout>
