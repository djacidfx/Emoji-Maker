<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imgGvBackgroundFromAssets"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_gravity="center"
        android:scaleType="fitXY" />

    <ImageView
        android:id="@+id/imChoose"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignEnd="@+id/imgGvBackgroundFromAssets"
        android:layout_alignRight="@+id/imgGvBackgroundFromAssets"
        android:layout_alignBottom="@+id/imgGvBackgroundFromAssets"
        android:src="@drawable/ic_beard1"
        android:visibility="gone" />
</RelativeLayout>
