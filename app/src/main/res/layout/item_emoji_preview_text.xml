<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:orientation="vertical">

    <com.demo.example.emoji.customview.RobotoRegularTextView
        android:id="@+id/tvNameEmoji"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginLeft="@dimen/p8dp"
        android:layout_marginTop="@dimen/p5dp"
        android:layout_marginBottom="@dimen/p5dp"
        android:background="@color/bg_clay_grape"
        android:padding="@dimen/p8dp"
        android:text="@string/app_name"
        android:textColor="@color/color_item_preview_text"
        android:textSize="@dimen/text_sz_13sp"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/imgEmoji"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerInParent="true" />
</RelativeLayout>
