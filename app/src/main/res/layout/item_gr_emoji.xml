<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rltEmoji"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imgRoot"
        android:layout_width="@dimen/p45dp"
        android:layout_height="@dimen/p45dp"
        android:layout_centerInParent="true"
        android:src="@drawable/shape" />

    <ImageView
        android:id="@+id/shapeSelect"
        android:layout_width="@dimen/p45dp"
        android:layout_height="@dimen/p45dp"
        android:layout_centerInParent="true"
        android:src="@drawable/shape_select" />

    <ImageView
        android:id="@+id/imgComponent"
        android:layout_width="@dimen/p45dp"
        android:layout_height="@dimen/p45dp"
        android:layout_centerInParent="true" />

    <ImageView
        android:id="@+id/imgLock"
        android:layout_width="@dimen/_20sdp"
        android:layout_height="@dimen/_20sdp"
        android:layout_alignParentEnd="true"
        android:padding="@dimen/_3sdp"
        android:src="@drawable/lock_in_emoji" />
</RelativeLayout>
